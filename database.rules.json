{
  "rules": {
    ".read": "true",
    ".write": "auth.uid != null",
    "vaults": {
      ".indexOn": "owner"
    },
    "currency": {
      ".indexOn": "vault"
    },
    "coin": {
      ".indexOn": ["vault","currency"]
    },
    "permissions": {
      ".indexOn": ["vault","user"]
    },
    "themes": {

    },
    "defaulttreasures":{
      ".indexOn": ["edition","parent"]
    },
    "defaultvaluables":{
      ".indexOn": ["edition","parent"]
    },
    "bags": {
      ".indexOn": ["vault"]
    },
    "treasure": {
      ".indexOn": ["vault","location","changeBy"]
    },
    "valuables": {
      ".indexOn": ["vault","location","changeBy"]
    },
    "users": {

    },
    "prepcoins": {
      ".indexOn": ["vault","currency","reward"]
    },
    "prepvaluables": {
      ".indexOn": ["vault","reward"]
    },
    "preptreasures": {
      ".indexOn": ["vault","reward"]
    }

  }
}